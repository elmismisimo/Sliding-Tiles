<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_Primary</item>
        <item name="colorPrimaryDark">@color/color_PrimaryDark</item>
        <item name="colorAccent">@color/color_Accent</item>
        <item name="colorControlHighlight">@color/color_Primary</item>
        <item name="android:windowBackground">@color/color_Background</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Light" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_LPrimary</item>
        <item name="colorPrimaryDark">@color/color_LPrimaryDark</item>
        <item name="colorAccent">@color/color_LAccent</item>
        <item name="colorControlHighlight">@color/color_LPrimary</item>
        <item name="android:windowBackground">@color/color_LBackground</item>
    </style>
    <style name="AppTheme.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>
